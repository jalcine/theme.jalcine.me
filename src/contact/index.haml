:javascript
  window.onload = function () {
    var editor = new Pen('#editorRegion')
  }

:css
  form {
    text-align: center;
  }
  div#editorRegion.css {
    border: 1px solid #222;
    padding: 0.5rem 1rem;
    width: 90%;
    margin: 1rem auto;
    max-width: 40rem;
  }

%h1 Contact
%p You can reach out to me using this form for prioritization into my email / notification pool.

%form{action:"//formspree.io/yo@jacky.wtf", method:"POST"}
  %input{type:'text', name: 'name', placeholder: 'Your Name'}
  %input{type:'email', name: '_replyTo', placeholder: 'email@domain.tld'}
  %input{type:'hidden', name: '_next', value: 'https://jacky.wtf/contact/complete'}
  %input{type:'hidden', name: '_subject', value: 'Site Inquiry'}
  %input{type:'text', name:"_gotcha", style: 'display:none'}
  %input{type:'submit', value: 'Send'}
  %div#editorRegion
