# vim:set fdl=0 nospell:
source 'https://rubygems.org'
ruby '2.1.3'

# {{{ Core Utilities
gem 'sass'
gem 'haml'
gem 'dotenv'
gem 'rb-gsl'
gem 'nokogiri'
# }}}

group :jekyll do
  gem 'jekyll'
  gem 'jekyll-gist'
  gem 'jekyll-sass'
  gem 'jekyll-haml'
  gem 'jemoji'
  gem 'jekyll-tagging'
  gem 'jekyll-compose'
  gem 'jekyll-timeago'
  gem 'jekyll-git_metadata'
end

# {{{ Development
# Local web server
gem 'rack'
gem 'rack-livereload'

# Automation
gem 'guard'
gem 'guard-jekyll-plus', '2.0.0'
gem 'guard-rack'
gem 'guard-bundler'
gem 'guard-livereload'
# }}}

group :deployment do
  gem 'mina'
  gem 'mina-rsync'
end
